<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tangem Note ERC-20 Recovery"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recover any ERC-20 tokens accidentally sent to Tangem Note"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp" />

        <!-- Step 1: Scan Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Step 1: Scan Card"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScanCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Scan Tangem Note Card"
                    android:textAllCaps="false"
                    app:icon="@android:drawable/ic_menu_camera"
                    app:iconGravity="textStart" />

                <TextView
                    android:id="@+id/tvWalletAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wallet: Not scanned"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:textIsSelectable="true"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvEthBalance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ETH Balance: --"
                    android:textSize="12sp"
                    android:textColor="@color/eth_blue" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Step 2: Select Token -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Step 2: Select Token"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Popular Tokens:"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="4dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:scrollbars="none">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupTokens"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipUsdt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="USDT"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipUsdc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="USDC"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipDai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DAI"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipWeth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WETH"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipLink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LINK"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipUni"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UNI"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCustom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Custom..."
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                    </com.google.android.material.chip.ChipGroup>
                </HorizontalScrollView>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilTokenContract"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Token Contract Address (0x...)"
                    android:visibility="gone"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTokenContract"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:fontFamily="monospace"
                        android:textSize="12sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLoadToken"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Load Token Info"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <LinearLayout
                    android:id="@+id/llTokenInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    android:padding="12dp"
                    android:background="#E8F5E9">

                    <TextView
                        android:id="@+id/tvTokenName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Token: -"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTokenBalance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Balance: -"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/usdt_green" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Step 3: Transfer -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Step 3: Transfer"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Recipient Address (0x...)"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRecipientAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:fontFamily="monospace"
                        android:textSize="12sp"
                        android:enabled="false"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Amount"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textSize="14sp"
                            android:enabled="false"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMaxAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MAX"
                        android:textAllCaps="true"
                        android:enabled="false"
                        android:layout_marginStart="8dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSendToken"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send Token"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:enabled="false"
                    android:layout_marginTop="12dp"
                    app:backgroundTint="@color/usdt_green" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Status -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#FAFAFA">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:indeterminate="true"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ready. Scan your Tangem Note card to begin."
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:textIsSelectable="true"
                    android:minLines="2" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Warning -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚠️ Ensure you have enough ETH for gas fees. Transactions are irreversible."
            android:textSize="11sp"
            android:textColor="#FF5722"
            android:padding="8dp" />

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Source - MIT License"
            android:textSize="10sp"
            android:textColor="#999999"
            android:textAlignment="center"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
